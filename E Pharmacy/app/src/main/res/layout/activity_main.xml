<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mainActivityName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Md. Shadikur Rahman "
                android:textColor="@color/custom_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mainActivityCart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/custom_color"
                android:background="@drawable/ic_baseline_shopping_cart_24"/>
        </RelativeLayout>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_placeholder="@drawable/ic_launcher_foreground"
            app:iss_error_image="@drawable/ic_launcher_background"
            app:iss_delay="0"/>

        <TextView
            android:id="@+id/mainActivityCallToOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:background="@color/custom_color"
            android:textSize="18sp"
            android:text="Call to order"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore your health kit!"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>
        <RelativeLayout
            android:id="@+id/mainActivityExploreCovid19Products"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/covid_19_product"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:drawableTint="@color/custom_color"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid 19 Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mainActivityExploreBabyProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/health_product"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:drawableTint="@color/custom_color"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby's Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mainActivityExploreBeautyProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/beauty_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beauty Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mainActivityExploreHerbalProducts"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/herbal_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Herbal Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityExploreSexualWellness"

            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sexual_wellness"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexual Wellness"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:id="@+id/mainActivityExplorePersonalHealthCare"

            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/personal_care_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Health Care"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/mainActivityExploreSupplementProducts"

            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/supplement_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplement Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mainActivityExploreSportsProducts"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:layout_marginTop="8dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sports_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableTint="@color/custom_color"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="Sports Products"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>